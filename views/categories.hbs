<div class="row">
 <div class="col-md-12">
 <h2>Categories</h2>
 <a href="/categories/add" class="btnbtn-success pull-right">Add Category</a>
 <hr />
 <div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th style="text-align: center;">Category ID</th>
                <th style="text-align: center;">Category Name</th>
            </tr>
        </thead>
        <tbody>
          {{#if categories}} 
            {{#each categories}}
            <tr>
                <td><a href="/posts?category={{this.id}}">{{this.id}}</a></td>
                <td><a href="/posts?category={{this.id}}">{{this.category}}</a></td>
                <td> <a href="/category/delete/{{this.id}}" class="btn btn-danger">Remove</a></td>
            </tr>
            {{/each}}
          {{/if}}
        </tbody>
    </table>
 </div>
</div>
 {{#unless categories}}
 <div class="col-md-12 text-center">
 <strong>{{message}}</strong>
</div>
 {{/unless}}
</div>